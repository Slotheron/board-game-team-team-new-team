@model LudoGame.Models.Game
@helper turnName(List<GameEngine.GamePlayer> players)
    {
        foreach (GameEngine.GamePlayer player in players)
        {
            if (player.Turn == true)
            {
                <div class="currentPlayer">@Html.Label(player.Name)</div>
            }
        }
}
@helper startGame(bool pressed)
    {
        if (pressed == true)
        {
            <div><button type="button" id="StartGameBtn" hidden="hidden">Start Game</button></div>
        }
        else
        {
            <div><button type="button" id="StartGameBtn" onclick="location.href='@Url.Action("StartGame")'">Start Game</button></div>
        }
}

<div class="gameInfo">
    <div><button type="button" id="DiceButton" onclick="location.href='@Url.Action("RollDice")'">Roll Dice!</button></div>
    <br />
    <div><button type="button" id="MovePiece" onclick="location.href='@Url.Action("MovePiece1")'">Move Piece 1</button></div>
    <br />
    <div><button type="button" id="MovePiece" onclick="location.href='@Url.Action("MovePiece2")'">Move Piece 2</button></div>
    <br />
    <div><button type="button" id="MovePiece" onclick="location.href='@Url.Action("MovePiece3")'">Move Piece 3</button></div>
    <br />
    <div><button type="button" id="MovePiece" onclick="location.href='@Url.Action("MovePiece4")'">Move Piece 4</button></div>
    <br />
    <div><button type="button" id="EndTurn" style="vertical-align:middle" onclick="location.href='@Url.Action("EndTurn")'"><span>End Turn </span></button></div>
    <br />
    <br />
    <br />
    <br />
    <br />
    @startGame(Model.buttonPressed)
    <br />
    <div class="dice">
        @if (Model.Dice.Value == 1)
        {
            <div class="diceDot" id="center"></div>
        }
        else if (Model.Dice.Value == 2)
        {
            <div class="diceDot" id="leftUpper"></div>
            <div class="diceDot" id="rightLower"></div>
        }
        else if (Model.Dice.Value == 3)
        {
            <div class="diceDot" id="center"></div>
            <div class="diceDot" id="leftLower"></div>
            <div class="diceDot" id="rightUpper"></div>
        }
        else if (Model.Dice.Value == 4)
        {

            <div class="diceDot" id="leftUpper"></div>
            <div class="diceDot" id="leftLower"></div>
            <div class="diceDot" id="rightUpper"></div>
            <div class="diceDot" id="rightLower"></div>
        }
        else if (Model.Dice.Value == 5)
        {
            <div class="diceDot" id="center"></div>
            <div class="diceDot" id="leftUpper"></div>
            <div class="diceDot" id="leftLower"></div>
            <div class="diceDot" id="rightUpper"></div>
            <div class="diceDot" id="rightLower"></div>
        }
        else if (Model.Dice.Value == 6)
        {
            <div class="diceDot" id="leftUpper"></div>
            <div class="diceDot" id="leftMiddel"></div>
            <div class="diceDot" id="leftLower"></div>
            <div class="diceDot" id="rightUpper"></div>
            <div class="diceDot" id="rightMiddel"></div>
            <div class="diceDot" id="rightLower"></div>
        }
    </div>
    <br />
    <div class="text-info">Current Player's Turn</div>
    @turnName(Model.Players)
</div>

