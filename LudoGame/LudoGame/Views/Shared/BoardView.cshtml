
@model LudoGame.Models.Game

@helper BrickHelper(List<GameEngine.GamePlayer> players, int position)
    {
        foreach (GameEngine.GamePlayer player in players)
        {
            if (player.One.Position == position)
            {
                <div class="brick"></div>
            }
            else if (player.Two.Position == position)
            {
                <div class="brick"></div>
            }
            else if (player.Three.Position == position)
            {
                <div class="brick"></div>
            }
            else if (player.Four.Position == position)
            {
                <div class="brick"></div>
            }
        }
}

@helper BrickColorHelper(List<GameEngine.GamePlayer> players, int position, string color)
    {
        foreach (GameEngine.GamePlayer player in players)
        {
            if (player.One.Position == position && player.Color == color)
            {
                <div class="brick"></div>
            }
            else if (player.Two.Position == position && player.Color == color)
            {
                <div class="brick"></div>
            }
            else if (player.Three.Position == position && player.Color == color)
            {
                <div class="brick"></div>
            }
            else if (player.Four.Position == position && player.Color == color)
            {
                <div class="brick"></div>
            }
        }
}


